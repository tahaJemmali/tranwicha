{% extends 'user/admin/back.html.twig' %}

{% block title %}Plat{% endblock %}

{% block body %}
    <h1>Plat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ plat.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ plat.description }}</td>
            </tr>
            <tr>
                <th>Recette</th>
                <td>{{ plat.recette }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ plat.price }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ plat.video }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ plat.image }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ plat.date ? plat.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('plat_index') }}">back to list</a>

    <a href="{{ path('plat_edit', {'id': plat.id}) }}">edit</a>

    {{ include('plat/_delete_form.html.twig') }}
{% endblock %}
