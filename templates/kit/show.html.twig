{% extends 'user/admin/back.html.twig' %}

{% block title %}Kit{% endblock %}

{% block body %}
    <h1>Kit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ kit.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ kit.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ kit.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ kit.image }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ kit.video }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ kit.createdAt ? kit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('kit_index') }}">back to list</a>

    <a href="{{ path('kit_edit', {'id': kit.id}) }}">edit</a>

    {{ include('kit/_delete_form.html.twig') }}
